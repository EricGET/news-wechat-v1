/**index.wxss**/

.nav-bar {
  display: flex;
  align-items: center;
  background-color: #13227a;
  padding-top: 60rpx;
  padding-bottom: 30rpx;
  padding-left: 20rpx;
}

.nav-icon {
  width: 50rpx;
  height: 50rpx;
}

.nav-text {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 47rpx;
  color: rgba(255, 255, 255, 1);
  padding-left: 20rpx;
}

.newsNav {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 50rpx;
  background: #13227a;
}

.newsCategory-list {
  display: flex;
  position: relative;
  width: 750rpx;
  height: 50rpx;
  justify-content: space-around;
}

.newsCategoryItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 56rpx;
  height: 50rpx;
}

.label__text {
  font-size: 28rpx;
  line-height: 40rpx;
}

.label__icon-checked {
  width: 40rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 1);
}

.hotNews-wrapper {
  position: relative;
  width: 750rpx;
  height: 520rpx;
}

.hotNews-bg {
  width: 710rpx;
  height: 480;
  margin: 20rpx;
  z-index: -1;
}

.hotNews-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
}

.hotNewsTips {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 80rpx;
}

.hotNews-title {
  font-size: 38rpx;
  line-height: 54rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.8);
}

.hotNewsSubTitle {
  font-size: 26rpx;
  line-height: 37rpx;
  color: rgb(150, 150, 139);
}

.news-list {
  position: relative;
  width: 750rpx;
  height: 576rpx;
  overflow: scroll;
}

.news-item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: 144rpx;
  border-bottom: 1px solid #ddd;
}

.news-image {
  width: 160rpx;
  height: 100rpx;
}

.newsTips {
  display: flex;
  flex-direction: column;
}

.newsTitle {
  font-size: 30rpx;
  line-height: 42rpx;
  width: 570rpx;
}

.newsSubTitle {
  font-size: 26rpx;
  line-height: 37rpx;
  opacity: 0.5;
}
